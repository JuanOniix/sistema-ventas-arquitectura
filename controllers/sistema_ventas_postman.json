{
  "info": {
    "name": "Sistema de Ventas (Arquitectura en Capas)",
    "_postman_id": "1234-5678-91011",
    "description": "Colección de endpoints para probar el sistema de ventas con arquitectura en capas (Clientes, Productos, Ventas).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Clientes",
      "item": [
        {
          "name": "Crear Cliente",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Juan Pérez\",\n    \"email\": \"juanperez@example.com\",\n    \"phone\": \"3121234567\"\n}"
            },
            "url": "http://localhost:3000/clients"
          }
        },
        {
          "name": "Listar Clientes",
          "request": { "method": "GET", "url": "http://localhost:3000/clients" }
        },
        {
          "name": "Actualizar Cliente",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Juan Pérez Actualizado\",\n    \"email\": \"juanperez@example.com\",\n    \"phone\": \"3105559999\"\n}"
            },
            "url": "http://localhost:3000/clients/{{client_id}}"
          }
        }
      ]
    },
    {
      "name": "Productos",
      "item": [
        {
          "name": "Crear Producto 1",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Mouse inalámbrico\",\n    \"price\": 80000,\n    \"stock\": 15\n}"
            },
            "url": "http://localhost:3000/products"
          }
        },
        {
          "name": "Crear Producto 2",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Teclado mecánico\",\n    \"price\": 150000,\n    \"stock\": 8\n}"
            },
            "url": "http://localhost:3000/products"
          }
        },
        {
          "name": "Listar Productos",
          "request": { "method": "GET", "url": "http://localhost:3000/products" }
        }
      ]
    },
    {
      "name": "Ventas",
      "item": [
        {
          "name": "Registrar Venta",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"client_id\": \"{{client_id}}\",\n    \"products\": [\n        { \"product_id\": \"{{product1_id}}\", \"quantity\": 2 },\n        { \"product_id\": \"{{product2_id}}\", \"quantity\": 1 }\n    ]\n}"
            },
            "url": "http://localhost:3000/sales"
          }
        },
        {
          "name": "Listar Ventas",
          "request": { "method": "GET", "url": "http://localhost:3000/sales" }
        },
        {
          "name": "Consultar Venta por ID",
          "request": {
            "method": "GET",
            "url": "http://localhost:3000/sales/{{sale_id}}"
          }
        }
      ]
    }
  ]
}
